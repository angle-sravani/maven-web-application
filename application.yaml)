apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: my app
  namespace: argocd
spec:
  destination:
    namespace: your-namespace
    server: https://kubernetes-api.your-cluster.com
  source:
    repoURL: https://github.com/your-repo/your-app.git
    path: argocd
    targetRevision: HEAD
  project: default
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
